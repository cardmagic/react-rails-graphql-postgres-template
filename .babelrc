{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": "> 1%",
          "uglify": true
        },
        "useBuiltIns": true
      }
    ],
    "react",
    "flow"
  ],
  "plugins": [
    "syntax-flow",
    "syntax-dynamic-import",
    "transform-object-rest-spread",
    [
      "transform-class-properties",
      {
        "spec": true
      }
    ],
    [
      "module-resolver",
      {
        "root": ["./app/javascript/"],
        "alias": {
          "assets": "./app/javascript/assets",
        }
      }
    ],
    "js-logger",
    "jsx-control-statements"
  ]  
}
